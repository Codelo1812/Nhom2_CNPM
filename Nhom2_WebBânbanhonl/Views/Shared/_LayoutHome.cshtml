<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cake Shop</title>
    <link rel="stylesheet" href="~/Content/cssHome/StyleHome.css" />
</head>

<body>
    @RenderBody()
    <header>
        <div class="nav-bar">
            <img src="~/image/menu.png" class="icon" alt="Menu" />
            <img src="~/image/search.png" class="icon-search" alt="Search" />
            <div class="search-box">
                <input type="text" placeholder="Search..." />
            </div>
            <div><img src="~/image/filter.png" class="icon-filter" alt="Filter"></div>
            <div class="cart">
                <img src="~/image/shopping-cart.png" class="icon" alt="Cart" />
            </div>
            <div class="login"><button class="login-btn">Log in</button></div>
        </div>
    </header>


    <section class="banner">
        <img src="~/image/banner.png" alt="Sweet Cake Banner" class="banner-img" />
    </section>


    <section class="cake-list">
        <div class="cake-card">
            <img src="~/image/hinh1.jpg" alt="Cake 1" />
            <p>Tên Bánh: Bánh 1<br>Giá: 100.000 VNĐ</p>
        </div>
